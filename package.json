{
  "name": "typescript-client-server-boilerplate",
  "version": "1.0.0",
  "description": "A TypeScript client/server boilerplate project.",
  "scripts": {
    "start:client": "npm run build:client && webpack-dev-server --open",
    "start:server": "npm run build:server && node dist/server.index.js",
    "start:dev:client": "webpack-dev-server",
    "start:dev:server": "nodemon",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rimraf ./dist/client/js/bundle.js && webpack",
    "build:server": "rimraf ./dist/server && tsc -b server",
    "clean": "rimraf ./dist/client/js/bundle.js && rimraf ./dist/server",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "author": "Nicky van Urk",
  "license": "MIT",
  "devDependencies": {
    "@shopify/eslint-plugin": "^36.0.2",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-shopify": "^35.1.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3"
  }
}
